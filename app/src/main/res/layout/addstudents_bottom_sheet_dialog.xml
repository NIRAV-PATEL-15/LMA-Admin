<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/studentsbottomsheet"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/bg"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="11dp">

            <ImageView
                android:id="@+id/imagecontact"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/white"
                android:src="@drawable/dp_cropped"/>




            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtfullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kavathiya Jeel Harsukhbhai"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtenrollmentno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20SOEIT11013"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtsemester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/txtdivision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5IT-A"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>
                </androidx.appcompat.widget.LinearLayoutCompat>




            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="15sp">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/addstudentedit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:paddingHorizontal="38dp"
                android:paddingVertical="15dp"
                android:text="Edit\nStudents"
                android:layout_marginEnd="50dp"
                android:textColor="@color/bg"
                app:cornerRadius="10dp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/addstudentdatails_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:paddingHorizontal="38dp"
                android:paddingVertical="15dp"
                android:text="Detalis\nStudents"
                android:textColor="@color/bg"
                app:cornerRadius="10dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</LinearLayout>